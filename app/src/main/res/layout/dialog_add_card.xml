<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/grey_corner_background"
    android:paddingBottom="20dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:id="@+id/dialog_phonenum_logout"
    android:elevation="5dp">

    <TextView
        android:id="@+id/tv_title_add_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="ADD NEW NFC CARD"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/blue"/>

    <ImageView
        android:id="@+id/img_add_card"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_add_card"
        android:layout_below="@+id/tv_title_add_card"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_cardId_result"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/img_add_card"
        android:background="@drawable/rounded_corner_edittext"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="center"
        android:text=""
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_card_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Existing"
        android:textColor="#EED202"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/quicksand_medium"
        android:layout_below="@+id/tv_cardId_result"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_below="@+id/tv_card_status"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_confirm_bg"
        android:text="EXIT"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_below="@+id/tv_card_status"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_confirm_bg"
        android:text="CONFIRM"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/quicksand_medium"/>

</RelativeLayout>