<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_recyclerview_vehicle">
        <ImageView
            android:id="@+id/img_vehicle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/icon_motor"/>

        <ImageView
            android:id="@+id/img_watch_in"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5.5dp"
            android:layout_toEndOf="@+id/img_vehicle"
            android:src="@drawable/icon_watch_green" />

        <ImageView
            android:id="@+id/img_watch_out"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/img_vehicle"
            android:src="@drawable/icon_watch_red" />

        <TextView
            android:id="@+id/tv_time_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/img_watch_in"
            android:text="IN: 12:04"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_time_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/img_watch_out"
            android:text="OUT: 12:06"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_card_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="61dp"
            android:text="ID: 1325202"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_plate_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="10dp"
            android:text="Plate: 77C1-08172"
            android:textSize="17dp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>