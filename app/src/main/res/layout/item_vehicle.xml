<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingVertical="5dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/item_vehicle">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:background="@drawable/rounded_corner_cardview">

        <ImageView
            android:id="@+id/img_vehicle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/icon_motor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_watch_in"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toEndOf="@+id/img_vehicle"
            android:src="@drawable/icon_watch_green"
            app:layout_constraintStart_toEndOf="@id/img_vehicle"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="3dp"/>

        <ImageView
            android:id="@+id/img_watch_out"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toEndOf="@+id/img_vehicle"
            android:src="@drawable/icon_watch_red"
            app:layout_constraintStart_toEndOf="@id/img_vehicle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="3dp"/>

        <TextView
            android:id="@+id/tv_time_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="IN: 2022-12-09 09:09:09"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/green"
            app:layout_constraintStart_toEndOf="@+id/img_watch_in"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="13dp"
            android:layout_marginStart="3dp"/>

        <TextView
            android:id="@+id/tv_time_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="OUT: 2022-12-09 09:09:09"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/red"
            app:layout_constraintStart_toEndOf="@+id/img_watch_out"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="3dp"/>

        <TextView
            android:id="@+id/tv_plate_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/grey_background_license"
            android:fontFamily="@font/quicksand_medium"
            android:padding="5dp"
            android:text="77-C1\n08170"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>