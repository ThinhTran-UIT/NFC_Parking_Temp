<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/white_corner_background"
    android:paddingBottom="20dp"
    android:id="@+id/dialog_history_detail"
    android:elevation="5dp">

        <TextView
            android:id="@+id/tv_license_plate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="77C1-08172"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/orange_background"
            android:fontFamily="@font/quicksand_medium"/>

        <ImageView
            android:id="@+id/img_watch_in"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/tv_license_plate"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:src="@drawable/icon_watch_green"/>

        <TextView
            android:id="@+id/tv_time_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_license_plate"
            android:layout_marginTop="17dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/img_watch_in"
            android:fontFamily="@font/quicksand_medium"
            android:text="Time in: 11:23"
            android:textColor="@color/blue"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_watch_out"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@id/img_watch_in"
            android:layout_marginStart="12dp"
            android:src="@drawable/icon_watch_red" />

        <TextView
            android:id="@+id/tv_time_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_time_in"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@id/img_watch_out"
            android:fontFamily="@font/quicksand_medium"
            android:text="Time out: 12:34"
            android:textColor="@color/blue"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_card"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@id/img_watch_out"
            android:layout_marginStart="12dp"
            android:src="@drawable/icon_card_black" />

        <TextView
            android:id="@+id/tv_card_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_time_out"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@id/img_card"
            android:fontFamily="@font/quicksand_medium"
            android:text="Card ID: 13658749632"
            android:textColor="@color/blue"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_badge_in"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/img_card"
            android:layout_marginStart="12dp"
            android:src="@drawable/icon_badge_black" />

        <TextView
            android:id="@+id/tv_staff_confirm_getin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_card_id"
            android:layout_marginStart="15dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/img_badge_in"
            android:fontFamily="@font/quicksand_medium"
            android:text="Confirm Get-In: Tran Duc Thinh"
            android:textColor="@color/blue"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_badge_out"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/img_badge_in"
            android:layout_marginStart="12dp"
            android:src="@drawable/icon_badge_black" />

        <TextView
            android:id="@+id/tv_staff_confirm_getout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_staff_confirm_getin"
            android:layout_marginStart="15dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/img_badge_out"
            android:fontFamily="@font/quicksand_medium"
            android:text="Confirm Get-Out: Tran Duc Thinh"
            android:textColor="@color/blue"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_report_lost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_staff_confirm_getout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_bg_red"
            android:text="Report Lost"
            android:textSize="18sp"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="@color/red"/>

</RelativeLayout>