<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:ignore="ExtraText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="72dp">

        <TextView
            android:id="@+id/tv_number_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand_medium"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"/>

        <!--<Button
            android:id="@+id/btn_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_rescan"
            android:layout_toStartOf="@id/btn_add_user"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"/>-->

        <Button
            android:id="@+id/btn_add_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_add_user"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"/>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/sv_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_add_user"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="2dp"
            android:theme="@style/AppSearchView"
            android:background="@drawable/search_view_bg"
            app:iconifiedByDefault="false"
            app:queryHint="Enter Full Name/Phone Number" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_staff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sv_user"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:padding="5dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>