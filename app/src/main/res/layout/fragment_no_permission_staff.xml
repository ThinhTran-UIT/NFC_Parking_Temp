<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".fragment.NoPermissionStaffFragment">

    <ImageView
        android:id="@+id/img_alert"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/icon_alert" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_alert"
        android:layout_marginTop="30dp"
        android:text="Your role is staff.\nYou don't have permission to access this information.\nPlease contact your manager to discover."
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="@font/quicksand_medium"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>