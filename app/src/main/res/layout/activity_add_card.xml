<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".activity.AddCardActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title_add_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add new NFC card"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/img_add_card"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_below="@+id/tv_title_add_card"
            android:src="@drawable/img_add_card"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/tv_cardId_result"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/img_add_card"
            android:background="@drawable/rounded_corner_edittext"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center"
            android:text=""
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_card_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card already exists! Try another card"
            android:textColor="#EED202"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/quicksand_medium"
            android:layout_below="@+id/tv_cardId_result"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_below="@+id/tv_card_status"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_exit_bg"
            android:text="EXIT"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_below="@+id/tv_card_status"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_confirm_bg"
            android:text="CONFIRM"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/quicksand_medium"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>